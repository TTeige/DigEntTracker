<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digent.tim.digenttracker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TheTVDBInterface"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:authorities=".SuggestionProvider"
            android:name="com.digent.tim.digenttracker.SuggestionProvider">
        </provider>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchSeriesActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.digent.tim.digenttracker.MainActivity">
            </meta-data>
        </activity>
        <activity
            android:name=".ShowSeriesActivity"
            android:parentActivityName=".SearchSeriesActivity"
            android:label="@string/series_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.digent.tim.digenttracker.SearchSeriesActivity">
            </meta-data>
        </activity>
    </application>

</manifest>